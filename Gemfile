source :rubygems

# Sinatra is a really quick way of deploying a very simple
# web application
gem "sinatra"

# I'm using DataMapper here because it's trivial to set up
# You can always use ActiveRecord, or anything else
gem "data_mapper"
gem "dm-postgres-adapter"
gem "dm-validations"

# This will be used to run the periodic scheduling task
gem "rake"
